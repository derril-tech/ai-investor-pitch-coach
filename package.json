{
  "name": "pitch-coach-monorepo",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:gateway\" \"npm run dev:orchestrator\"",
    "dev:frontend": "cd apps/frontend && npm run dev",
    "dev:gateway": "cd apps/gateway && npm run start:dev",
    "dev:orchestrator": "cd apps/orchestrator && python -m uvicorn src.main:app --reload --port 8000",
    "build": "npm run build:frontend && npm run build:gateway && npm run build:sdk",
    "build:frontend": "cd apps/frontend && npm run build",
    "build:gateway": "cd apps/gateway && npm run build",
    "build:sdk": "cd packages/sdk && npm run build",
    "install:all": "npm install && cd apps/frontend && npm install && cd ../gateway && npm install && cd ../../packages/sdk && npm install",
    "docker:up": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:down": "docker-compose -f docker-compose.dev.yml down",
    "docker:logs": "docker-compose -f docker-compose.dev.yml logs -f",
    "lint": "npm run lint:frontend && npm run lint:gateway && npm run lint:sdk",
    "lint:frontend": "cd apps/frontend && npm run lint",
    "lint:gateway": "cd apps/gateway && npm run lint",
    "lint:sdk": "cd packages/sdk && npm run lint"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
